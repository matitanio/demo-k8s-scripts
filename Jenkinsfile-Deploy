pipeline {

    agent any
    stages {
        stage('Deploy'){

            steps{
            	script{
            		def currentVersion = sh script: 'helm search local/demo | cut -f2 | sed -n 2p',returnStdout: true
            		println "Desplegando la version $currentVersion"
                	sh "helm upgrade --install demo local/demo-k8s-${currentVersion}.tgz"
            	}
            }
        }
    }
}
